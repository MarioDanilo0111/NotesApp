<div class="container-fluid container-fluid-custom py-md-0 mb-5">
  <div class="row mb-4 mx-2 mt-2">
    <div class="col ms-4">
      <h1><%= userName %> <br /></h1>
      <p>Store them safe, so you don't forget.</p>
    </div>
  </div>
  <div class="row mx-2">
    <% if (notes.length > 0) { for(var i = 0; i < notes.length; i++){ %>
    <div class="col-md-4 col-sm-6 content-card">
      <div class="card-big-shadow">
        <div
          class="card card-just-text"
          data-background="color"
          data-color="none"
          data-radius="none"
        >
          <div class="content">
            <a
              href="/dashboard/item/<%= notes[i]._id %>"
              class="card-body text-decoration-none"
            >
              <h4 class="card-title"><%= notes[i].title %></h4>
              <p class="card-text"><%= notes[i].body %></p>
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }} else { %>
      
    <div
      class="row row-sm-6 row-md-6 row-xs-6 justify-content-between align-items-center"
    >
      <div class="col-md-6">
        <div class="deskboard">
          <img
            class="img-fluid has-bg-img"
            src="/img/deskboard.png"
            alt="deskboard"
          />
        </div>
      </div>
      <div class="col-md-6 col-lg-5 mr-0 ml-2 mb-md-0 position-relative">
        <h2 class="pr-0">Okay...</h2>

        <h4 class="">let's get to works, start writing</h4>
        <div class="" style="font-size: 40px">
          <a href="/dashboard/add"><i class="bi bi-pen-fill"></i></a>
        </div>
      </div>
    </div>
    <!-- </div> -->
      <% } %>
    </div>
    <!-- The pagination item -->
    <% if(notes.length > 0) { %>
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center mt-2">
        <% if(current == 1) { %>
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/dashboard">First</a>
        </li>
        <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <%
        if (i !== 1 ) { %>
        <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <%
        if(i == current ) { %>
        <li class="page-item"><a class="page-link" href="#"><%= i %></a></li>
        <% } else { %>
        <li class="page-item">
          <a class="page-link" href="/dashboard/?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% if(i == Number(current) + 4 && i < pages) { %>
        <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %> <% } %> <% if (current == pages) { %>
        <li class="page-item disabled"><a class="page-link">Last</a></li>
        <% } else { %>
        <li class="page-item">
          <a href="/dashboard/?page=<%= pages %>" class="page-link">Last</a>
        </li>
        <% } %>
      </ul>
    </nav>

    <% } %>
  </div>
</div>
