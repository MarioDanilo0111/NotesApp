<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= note.title%></li>
        </ol>
      </nav>

      <div class="col ms-4 d-flex justify-content-between align-items-center">
        <h1 class="h3">Edit your text.</h1>
        <button
          type="button"
          class="btn btn-danger btn-lg me-4"
          data-bs-toggle="modal"
          id="deleteButton"
          data-bs-target="#deleteModal"
        >
          <i class="bi bi-trash3-fill"></i>
        </button>
      </div>
    </div>
  </div>

  <div class="col-md-5 m-auto mr-4 mb-0" id="wrapper">
    <form
      action="/dashboard/item/<%= noteID %>?_method=PUT"
      method="POST"
      class="position-relativ"
      id="paper"
    >
      <div
        id="margin"
        class="form-group mb-4 position-absolut"
        style="left: -1px; top: 1px; right: 1px"
      >

      <input class="form-control fw-bold border-0 fs-4"
      id="title"
      type="text"
      name="title"
      value="<%= note.title %>"
      placeholder="Title"
      style="background-color: white; background-image: url(https://static.tumblr.com/maopbtg/E9Bmgtoht/lines.png),
      url(https://static.tumblr.com/maopbtg/nBUmgtogx/paper.png);">

      </div>



  
  <textarea
    id="text"
    name="body"
    rows="11"
    class="form-control pt-5 fs-4"
    placeholder="Take a note..."
    style="background-image: url(https://static.tumblr.com/maopbtg/E9Bmgtoht/lines.png),
           url(https://static.tumblr.com/maopbtg/nBUmgtogx/paper.png);
           padding-left: 90px;"
  >
  <%= note.body %></textarea
  >
</div>


      <div class="form-group">
        <button type="submit" class="btn float-end btn-primary btn-lg">
          <i class="bi bi-database-fill-check"></i>
        </button>
      </div>
    </form>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a note</h5>
      </div>
      <div class="modal-body">
        <p>
          This acction will delet note <b class="fw-bold"><%= note.title %></b
          ><br />
          still want to proceed?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>

        <form
          action="/dashboard/item-delete/<%= noteID %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-trash3-fill"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
