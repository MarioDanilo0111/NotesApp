<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row">
    <div class="col-md-3 m-auto mt-5 ms-5 mb-3 w-100">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active"><%- note.title%></li>
        </ol>
      </nav>

      <div
        class="col mx-4 ms-5 d-flex justify-content-between align-items-center"
      >
        <h1 class="h3">text editor:</h1>
        <button
          type="button"
          class="btn btn-danger btn-lg me-4"
          data-bs-toggle="modal"
          id="deleteButton"
          data-bs-target="#deleteModal"
        >
          <i class="bi bi-trash3-fill"></i>
        </button>
      </div>
    </div>

    <div class="col-md-5 m-auto mb-0" id="wrapper">
      <form
        action="/dashboard/item/<%-noteID%>?_method=PUT"
        method="POST"
        class="position-relativ"
        id="paper"
      >
        <div
          id="margin"
          class="form-group mb-4 position-absolut"
          style="left: -1px; top: 1px; right: 1px"
        >
          <input
            class="form-control fw-bold border-0 fs-4"
            id="title"
            type="text"
            name="title"
            value="<%-note.title%>"
            placeholder="Title"
          />
        </div>

        <div class="form-group mb-4">
          <textarea
            id="text"
            name="body"
            id="body"
            rows="11"
            class="form-control pt-5 fs-4"
            placeholder="Take a note..."
          >
        <%-note.body%></textarea
          >
        </div>

        <div class="form-group me-5">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-database-fill-check"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a note</h5>
      </div>
      <div class="modal-body">
        <p>
          This acction will delet note <b class="fw-bold"><%= note.title %></b
          ><br />
          still want to proceed?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>

        <form
          action="/dashboard/item-delete/<%= noteID %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-trash3-fill"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
