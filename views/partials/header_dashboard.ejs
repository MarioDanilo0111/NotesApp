<div class="container-fluid">
  <header class="mt-3 mx-4">
    <nav class="navbar rounded navbar-expand-md bg-body-tertiary py-3 mb-4">
      <div class="container-fluid">
        <a class="navbar-brand ms-3" href="/dashboard"
          ><img src="/img/notesApp.png" width="90" height="90" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active mx-1"
                aria-current="page"
                href="/dashboard"
                ><i class="bi bi-house-check-fill" style="font-size: 40px"></i
              ></a>
            </li>
            <li class="nav-item">
              <a class="nav-link mx-1" href="/cal"
                ><i
                  class="bi bi-calendar2-week"
                  style="font-size: 40px; color: black"
                ></i
              ></a>
            </li>
          </ul>

          <!-- This form has the 'action' and POST 'method' for the searching functionality -->
          <form
            class="d-flex me-5"
            role="search"
            method="POST"
            action="/dashboard/search"
          >
            <!-- name prop is used to ask for data  -->

            <input
              class="form-control me-2"
              type="search"
              name="searchTerm"
              placeholder="Search"
              aria-label="Search"
              required
            />
            <button class="btn btn-outline-success me-0" type="submit">
              <i class="bi bi-search" style="color: black"></i>
            </button>
          </form>
          <a class="nav-link me-5" href="/dashboard/add"
            ><i
              class="bi bi-pencil-square"
              style="font-size: 40px; color: black"
            ></i
          ></a>

          <a class="nav-link me-5" href="/logout"
            ><i
              class="bi bi-box-arrow-right"
              style="font-size: 40px; color: black"
            ></i
          ></a>
        </div>
      </div>
    </nav>
  </header>
</div>
